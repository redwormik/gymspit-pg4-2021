<Window x:Class="Lecture13ToDoList.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture13ToDoList.View"
        mc:Ignorable="d"
        Title="ToDo List" Height="450" Width="800">
    <Grid>
        <Label Content="ToDo List" Height="40" Margin="10,0,0,371" VerticalAlignment="Bottom" FontSize="24" HorizontalAlignment="Left" Width="774"/>
        <local:ToDoItemList x:Name="itemList" HorizontalAlignment="Left" Height="183" Margin="10,54,0,0" VerticalAlignment="Top" Width="774"/>

        <Label x:Name="label" Content="New item" HorizontalAlignment="Left" Margin="10,242,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="addLabel" HorizontalAlignment="Left" Height="23" Margin="10,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="682"/>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="697,272,0,0" VerticalAlignment="Top" Width="75" Height="24" Click="AddButton_Click"/>

        <Button x:Name="markDoneButton" Content="Mark all as Done" HorizontalAlignment="Left" Margin="10,301,0,0" VerticalAlignment="Top" Width="107" Height="24" Click="MarkDoneButton_Click"/>
    </Grid>
</Window>
